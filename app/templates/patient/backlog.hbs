<div class="panel panel-default">
  <div class="panel-body">

    <div class="table-full-width">
      <table class="table">
        <thead>
          <tr>
            {{#each symptom as |sym|}}
            <th scope="col">{{sym.name}}</th>
            <th scope="col">{{sym.name}}</th>
            <th scope="col">{{sym.name}}</th>
		    <th scope="col">{{sym.name}}</th>
			{{/each}}
          </tr>
        </thead>
        <tbody>
			{{#each model as |log|}}
				<tr class="parent-tr" {{action "viewDetails" log on='doubleClick'}}>
					<td class="text-center clickable" {{action 'viewDetails' log}}>
						<span class="glyphicon {{if log.expanded 'glyphicon-chevron-up' 'glyphicon-chevron-down'}}" aria-hidden="true"></span>
					</td>
					<td>{{log.time}}</td>
				</tr>
				{{#if log.expanded}}
					<tr>
						<td colspan="20">
							<div class="table-full-width">
									<table class="table">
										<thead>
											<th>Symptom</th>
											<th>Value</th>
										</thead>
										<tbody>
											{{#each log.symptoms as |stat|}}
												<tr>
													<td>{{stat.name}}</td>
													{{#if stat.isSlider}}
														<td>{{stat.value}}</td>
													{{else if stat.isText}}
														<td>{{stat.value}}</td>
													{{else}}
														<td></td>
													{{/if}}
												</tr>
												
											{{/each}}
											<tr>
													<td>{{log.notes}}</td>
												</tr>
									</tbody>
								</table>
							</div>
						</td>
					</tr>
				{{/if}}
			{{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>